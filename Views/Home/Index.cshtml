<body>
    <h1>Here are some delicious foods!</h1>
    @{ List
    <string> food = new List
        <string>() { "Apple Pie", "Burritos", "Clams Casino", "Donuts", "catatomic cookies" }; foreach(string word in food) { if(word[0] == 'C') {
            <p style="color: red">@word</p>
            } else if(word[0] == 'c'){
            <p style="color: red">@word</p>
            } else {
            <p>@word</p>
            } } }

</body>

